{% extends "DatamartMappingsBundle::layout.html.twig" %}

{% block title %}
    Supprimer une Source - {{ parent() }}
{% endblock %}

{% block datamartmappings_body %}

    <h2>Supprimer une Source</h2>

    <p>
        Etes-vous certain de vouloir supprimer la Source "{{ source.originalField }}" ?
    </p>

    <form action="{{ path('datamart_mappings_source_delete', {'id': source.id}) }}" method="post">
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_end(form) }}
    <br/>
    <p>
        <a href="{{ path('datamart_mappings_source') }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour Ã  la liste de Sources
        </a>
    </p>
{% endblock %}